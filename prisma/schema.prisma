model Account {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  userId             String  @db.ObjectId
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?  
  access_token       String? 
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String? 
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String   @unique
  emailVerified DateTime?
  image         String
  workplace     String    @default("student")
  status        String    @default("student")
  accounts      Account[]
  showReview    Boolean  @default(false)
  review        Review?
}

model Review {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  reviewer String @db.ObjectId @unique
  review String
  user User @relation(fields: [reviewer], references: [id], onDelete: Cascade)
}